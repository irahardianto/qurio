# Application Keys
GEMINI_API_KEY=
RERANK_API_KEY=

# Database Settings
# Note: For Docker Compose, DOCKER_DB_HOST defaults to 'postgres'. 
# Only set DB_HOST if you are running the binary locally.
DB_HOST=localhost
DB_PORT=5432
DB_USER=qurio
DB_PASSWORD=password
DB_NAME=qurio

# Docker Internal Overrides (Optional - use these to override docker networking)
# DOCKER_DB_HOST=postgres
# DOCKER_WEAVIATE_HOST=weaviate:8080
# DOCKER_NSQ_LOOKUPD_HTTP_ADDRESS=nsqlookupd:4161
# DOCKER_NSQD_TCP_ADDRESS=nsqd:4150

# Weaviate
WEAVIATE_HOST=localhost:8080
WEAVIATE_SCHEME=http

# NSQ
NSQ_LOOKUPD_HTTP_ADDRESS=localhost:4161
NSQD_TCP_ADDRESS=localhost:4150
INGESTION_CONCURRENCY=50
NSQ_MAX_IN_FLIGHT=8

# Paths
MIGRATION_PATH=file://migrations
QURIO_UPLOAD_DIR=/var/lib/qurio/uploads

ENV=production